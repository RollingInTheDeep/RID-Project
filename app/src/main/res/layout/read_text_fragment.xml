<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button

        android:layout_width="196dp"
        android:layout_height="94dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:text="@string/저장"
        android:textSize="30dp"
        android:id="@+id/save_button_read_view"
        app:backgroundTint="#919AEC"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button

        android:layout_width="206dp"
        android:layout_height="94dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:text="@string/재촬영"
        android:textSize="30dp"
        android:id="@+id/retake_button_read_view"
        app:backgroundTint="#BEBAEF"
        app:cornerRadius="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/text_read_view"
        android:layout_width="335dp"
        android:layout_height="437dp"
        android:text="나에게는 하나의 목적지가 있다. 유일한 목적지...언제쯤 도착할 수 있을까"
        android:textColor="@color/black"
        android:textSize="25dp"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="109dp" />

    <TextView
        android:id="@+id/top_bar_read_view"
        android:layout_width="455dp"
        android:layout_height="70dp"
        android:background="#BEBAEF"
        android:text="   "
        android:textColor="@color/black"
        tools:layout_editor_absoluteX="-42dp"
        tools:layout_editor_absoluteY="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>